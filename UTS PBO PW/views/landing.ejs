    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        /* Background Styling */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #fff;
            background: url('https://e1.pxfuel.com/desktop-wallpaper/210/483/desktop-wallpaper-field-the-sky-grass-night-lights-lawn-football-uniform-tribune-stadium-athletes-floodlight-players-section-%D1%81%D0%BF%D0%BE%D1%80%D1%82-football-players-on-the-field.jpg') no-repeat center center/cover;
            position: relative;
            overflow: hidden;
        }

        /* Main Container */
        .main-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 20px;
            padding: 20px;
            background: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
        }

        /* Neon Effect for Heading */
        h1 {
            font-size: 3rem;
            color: rgb(255, 255, 255);
            text-shadow: 0 0 10px rgb(2, 255, 99), 0 0 20px rgb(124, 158, 204), 0 0 30px rgb(127, 199, 241), 0 0 40px #0ff;
            animation: neon-flicker 1.5s infinite alternate;
        }

        /* Intro Text Styling */
        p {
            font-size: 1.2rem;
            color: #ff0;
            text-shadow: 0 0 10px #ff0, 0 0 20px #ff0;
            margin-bottom: 20px;
            animation: fade-in 2s ease-in-out;
        }

        /* Link Buttons */
        .button-container {
            display: flex;
            gap: 15px;
            animation: fade-in 2.5s ease-in-out;
        }

        a {
            padding: 10px 20px;
            font-size: 1.2rem;
            color: #000;
            background: rgb(80, 255, 255);
            border: none;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px rgb(0, 255, 110), 0 0 20px rgb(0, 255, 94);
        }

        a:hover {
            color: #0ff;
            background: #000;
            box-shadow: 0 0 20px #0ff, 0 0 40px #0ff;
            transform: scale(1.1);
        }

        /* Keyframe Animations */
        @keyframes neon-flicker {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }

        @keyframes fade-in {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Horizontal Animation for Icons */
        .note {
            position: absolute;
            font-size: 3rem;
            opacity: 0.7;
            color: rgba(255, 255, 255, 0.2);
            animation: move-horizontal 8s linear infinite;
        }

        @keyframes move-horizontal {
            from {
                transform: translateX(-100vw);
            }
            to {
                transform: translateX(100vw);
            }
        }

        /* Social Media Card */
        .social-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #1a1a1ab1;
            border-radius: 10px;
            padding: 3px;
            box-shadow: 0 0 15px rgba(144, 248, 248, 0.422);
        }

        .social-card h3 {
            margin-bottom: 8px;
        }

        .social-icon {
            font-size: 2rem;
            margin: 0 8px;
            color: rgb(161, 167, 167);
            transition: color 0.3s ease;
        }

        .social-icon:hover {
            color: rgb(0, 140, 255);
        }

        .social-links {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
